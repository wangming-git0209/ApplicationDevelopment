@model Book

@{ 
    var listCategory = ViewData["listCategories"] as List<Category>; 
}

<script src="https://kit.fontawesome.com/a775ea28da.js" crossorigin="anonymous"></script>

<style>
    .body-container {
        display: flex;
    }

    .side-bar {
        width: 20%;
        margin: 0 20px 0 10px;
    }

    .fa-chart-line {
        margin-right: 10px;
    }

    .fa-book {
        margin-right: 10px;
    }

    .fa-list {
        margin-right: 10px;
    }

    .fa-clipboard-user {
        margin-right: 10px;
    }

    .display-container {
        width: 80%;
    }

    .btn-wrapper {
        margin: 10px 0 10px 0;
    }
    #book-management{
        color: black;
        text-decoration: none;
    }
    #category-request{
        color: black;
        text-decoration: none;
    }
</style>

<div class="body-container">
    <div class="side-bar">
        <ul class="list-group">
            <li class="list-group-item"><i class="fa-solid fa-book"></i><a id="book-management" asp-controller="Books" asp-action="Index">Book Management</a></li>
            <li class="list-group-item"><i class="fa-solid fa-list"></i><a id="category-request" asp-controller="Categories" asp-action="Index">Category Request</a></li>
            <li class="list-group-item"><i class="fa-solid fa-clipboard-user"></i>Record Management</li>
        </ul>
    </div>

    <div class="display-container">
        <form asp-controller="Book" asp-action="Update" method="post">
            <input asp-for="@Model.Id" type="hidden" value="@Model.Id" />

            <div class="form-group">
                <label>Name Of Book</label>
                <input asp-for="NameBook" class="form-control" placeholder="Name of Book" />
                <span asp-validation-for="NameBook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Quantity</label>
                <input asp-for="QuantityBook" class="form-control" placeholder="Quantity" type="number" />
                <span asp-validation-for="QuantityBook" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="Price" class="form-control" placeholder="Price" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label>Information of Book</label>
                <textarea asp-for="InformationBook" class="form-control" rows="4"></textarea>
            </div>
            <div class="form-group">
                <label>Category</label>
                <select asp-for="CategoryId"
                        asp-items="@(new SelectList(listCategory, "Id", "NameCategory"))"
                        class="form-control">
                </select>
            </div>
            <div class="btn-wrapper">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </form>
    </div>
</div>